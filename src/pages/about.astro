---
import { Image } from "astro:assets";

import BaseLayout from "/src/layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
    firstName: "Sarah",
    country: "Canada",
    occupation: "Technical Writer",
    hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;
---

<BaseLayout title="Home page">
    <div
        class="hero h-full flex-grow"
        style="background-image: url(/src/content/albums/food/web-nova-59.jpg);"
    >
        <div class="hero-overlay bg-opacity-60"></div>
        <div class="card w-96 bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="font-serif font-bold text-2xl">Contact Me</h2>
                <label class="input input-bordered flex items-center gap-2">
                    Name
                    <input type="text" class="grow"  />
                </label>
                <label class="input input-bordered flex items-center gap-2">
                    Email
                    <input
                        type="text"
                        class="grow"
                        
                    />
                </label>
                <textarea class="textarea textarea-bordered textarea-lg" placeholder="Message"
                ></textarea>
                <div class="card-actions justify-end">
                    <button class="btn btn-primary">Send!</button>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
